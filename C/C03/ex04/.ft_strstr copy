char	*ft_strstr(char *str, char *to_find)
{
	while(*str != '\0')
	{
		if ((*str == *to_find) || (*to_find == '\0'))
		{
			return (str);
		}
		str++;
	}
	
	str = '\0';
	return (str);
}
